# ClassQL Environment Configuration
# Copy this file to .env and update with your values

# Classy Server Configuration
# URL of the classy server for syncing course data
CLASSY_SERVER_URL=http://localhost

# Port of the classy server
CLASSY_SERVER_PORT=3000

# Optional: Override the sync endpoint URL
# If not set, defaults to {CLASSY_SERVER_URL}:{CLASSY_SERVER_PORT}/sync/all
# CLASSY_SYNC_ENDPOINT=http://localhost:3000/sync/all

# Database Configuration
# SQLite database path (set automatically, but can be overridden)
# Defaults to ./classy/classes.db relative to the project root
# SQLITE_DB_PATH=./classy/classes.db
